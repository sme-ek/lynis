[Unit]
Description=Ethereum Application by Netkiller
After=network.target

[Service]
User=ethereum
Group=ethereum
Type=simple
WorkingDirectory=/srv/go-ethereum
EnvironmentFile=/etc/sysconfig/ethereum
ExecStart=/srv/go-ethereum/bin/geth --testnet --networkid 3 --syncmode light --cache 1024 --rpc --rpcaddr ${RPCADDR} --rpccorsdomain "*"

[Install]
WantedBy=multi-user.target